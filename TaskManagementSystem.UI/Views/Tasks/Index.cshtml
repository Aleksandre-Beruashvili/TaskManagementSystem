@model IEnumerable<TaskManagementSystem.Application.DTOs.TaskDto>
@{
    ViewData["Title"] = "Tasks";
}
<h1>Tasks for Project: @ViewBag.Project?.Name</h1>
<p><a href="/Tasks/Create?projectId=@ViewBag.Project?.Id">Create New Task</a></p>
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Due Date</th>
            <th>Priority</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td>@task.DueDate.ToShortDateString()</td>
                <td>@task.Priority</td>
                <td>@task.State</td>
                <td>
                    <a href="/Tasks/Details/@task.Id">Details</a> |
                    <a href="/Tasks/Edit/@task.Id">Edit</a> |
                    <a href="/Tasks/Delete/@task.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
