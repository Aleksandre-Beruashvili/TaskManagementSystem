@model TaskManagementSystem.Application.DTOs.TeamDto

@{
    ViewData["Title"] = "Edit Team";
}

<h2>Edit Team</h2>

<form asp-action="Edit" method="post">
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <!-- Optionally, allow editing of members -->
    <div class="mb-3">
        <label class="form-label">Member IDs (comma separated)</label>
        <input type="text" name="MemberIds" class="form-control" value="@string.Join(",", Model.MemberIds)" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a class="btn btn-secondary" href="/Team">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
