@model TaskManagementSystem.Application.DTOs.TeamDto

@{
    ViewData["Title"] = "Delete Team";
}

<h2>Delete Team</h2>
<p>Are you sure you want to delete the team "<strong>@Model.Name</strong>"?</p>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a class="btn btn-secondary" href="/Team/Details/@Model.Id">Cancel</a>
</form>
