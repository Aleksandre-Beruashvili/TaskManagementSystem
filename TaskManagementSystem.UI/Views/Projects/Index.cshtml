@model IEnumerable<TaskManagementSystem.Application.DTOs.ProjectDto>
@{
    ViewData["Title"] = "Projects";
}
<h1>Projects</h1>
<p><a href="/Projects/Create">Create New Project</a></p>
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Due Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var project in Model)
        {
            <tr>
                <td>@project.Name</td>
                <td>@project.Description</td>
                <td>@project.DueDate.ToShortDateString()</td>
                <td>
                    <a href="/Projects/Details/@project.Id">Details</a> |
                    <a href="/Projects/Edit/@project.Id">Edit</a> |
                    <a href="/Projects/Delete/@project.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
