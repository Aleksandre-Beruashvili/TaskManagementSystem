@model TaskManagementSystem.Application.DTOs.TaskDto
@{
    ViewData["Title"] = "Task Details";
}
<h1>Task Details</h1>
<p><strong>Title:</strong> @Model.Title</p>
<p><strong>Description:</strong> @Model.Description</p>
<p><strong>Due Date:</strong> @Model.DueDate.ToShortDateString()</p>
<p><strong>Priority:</strong> @Model.Priority</p>
<p><strong>Status:</strong> @Model.State</p>
<p>
    <a href="/Tasks/Edit/@Model.Id">Edit</a> |
    <a href="/Tasks/Delete/@Model.Id">Delete</a> |
    <a href="/Projects/Details/@Model.ProjectId">Back to Project</a>
</p>
