<!DOCTYPE html>
<html lang="en" class="h-100">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Task Management System</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        :root {
            --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --hover-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        body {
            font-family: 'Poppins', sans-serif;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            background-color: #f8f9fa;
        }

        .navbar {
            background: var(--primary-gradient);
            box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
        }

        .nav-link {
            position: relative;
            margin: 0 15px;
            transition: all 0.3s ease;
        }

            .nav-link:hover {
                transform: translateY(-2px);
            }

            .nav-link::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 0;
                width: 0;
                height: 2px;
                background: white;
                transition: width 0.3s ease;
            }

            .nav-link:hover::after {
                width: 100%;
            }

        .welcome-section {
            background: var(--primary-gradient);
            color: white;
            border-radius: 15px;
            padding: 4rem 2rem;
            box-shadow: var(--hover-shadow);
            transform: translateY(0);
            transition: transform 0.3s ease;
        }

            .welcome-section:hover {
                transform: translateY(-5px);
            }

        .btn-hover {
            transition: all 0.3s ease;
            border: none;
        }

            .btn-hover:hover {
                transform: translateY(-2px);
                box-shadow: var(--hover-shadow);
            }

        .footer {
            background: var(--primary-gradient);
            color: white;
            margin-top: auto;
        }

        .animate-pop-in {
            animation: popIn 0.6s cubic-bezier(0.22, 0.61, 0.36, 1) forwards;
            opacity: 0;
        }

        @@keyframes popIn {
            0%

        {
            opacity: 0;
            transform: translateY(20px) scale(0.95);
        }

        100% {
            opacity: 1;
            transform: translateY(0) scale(1);
        }

        }

        .feature-icon {
            width: 60px;
            height: 60px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 20px;
        }
    </style>
</head>
<body>
    @{
        bool useAlternateLayout = ViewBag.UseAlternateLayout ?? false;
    }

    @if (User.Identity.IsAuthenticated)
    {
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
                <a class="navbar-brand fw-bold" href="/">📋 TaskFlow</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item"><a class="nav-link" href="/Projects">🏠 Projects</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Tasks">✅ Tasks</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Labels">🏷️ Labels</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Team">👥 Team</a></li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="/Profile">
                                👤 @User.Identity.Name
                            </a>
                        </li>
                        <li class="nav-item">
                            <form asp-controller="Account" asp-action="Logout" method="post">
                                <button type="submit" class="btn btn-light btn-hover ms-2">
                                    🚪 Logout
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    }
    else if (!useAlternateLayout)
    {
        <div class="container my-auto">
            <div class="welcome-section animate-pop-in">
                <h1 class="display-4 fw-bold mb-4">Welcome to TaskFlow</h1>
                <p class="lead mb-5">Organize, Collaborate, Succeed</p>
                <div class="d-flex gap-3 justify-content-center">
                    <a href="/Account/Login" class="btn btn-light btn-lg btn-hover px-4 py-2">
                        Get Started
                    </a>
                    <a href="/Account/Register" class="btn btn-outline-light btn-lg btn-hover px-4 py-2">
                        Create Account
                    </a>
                </div>
            </div>
        </div>
    }
    else
    {
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
                <a class="navbar-brand fw-bold" href="/">📋 TaskFlow</a>
            </div>
        </nav>
    }

    <main class="flex-shrink-0">
        @RenderBody()
    </main>

    <footer class="footer mt-auto py-4">
        <div class="container text-center">
            <span class="text-white">&copy; @DateTime.Now.Year - TaskFlow. All rights reserved.</span>
        </div>
    </footer>

    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>