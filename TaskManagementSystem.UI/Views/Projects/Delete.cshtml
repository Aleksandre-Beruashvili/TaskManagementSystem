@model TaskManagementSystem.Application.DTOs.ProjectDto

@{
    ViewData["Title"] = "Delete Project";
}

<h2>Delete Project</h2>
<p>Are you sure you want to delete the project "<strong>@Model.Name</strong>"?</p>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a class="btn btn-secondary" href="/Projects/Details/@Model.Id">Cancel</a>
</form>
